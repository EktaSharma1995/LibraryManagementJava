<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBooks</servlet-name>
        <servlet-class>com.servlet.ViewBooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBooksToAccount</servlet-name>
        <servlet-class>com.servlet.AddBooksToAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBooksToDatabase</servlet-name>
        <servlet-class>com.servlet.AddBooksToDatabase</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBookToDatabase</servlet-name>
        <servlet-class>com.servlet.UpdateBookToDatabase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBooks</servlet-name>
        <url-pattern>/ViewBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBooksToAccount</servlet-name>
        <url-pattern>/AddBooksToAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBooksToDatabase</servlet-name>
        <url-pattern>/AddBooksToDatabase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBookToDatabase</servlet-name>
        <url-pattern>/UpdateBookToDatabase</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
